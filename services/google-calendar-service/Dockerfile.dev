# Dockerfile.dev para Notification Service (Node.js)

FROM node:24-alpine

RUN apk add --no-cache bash openssl libc6-compat

WORKDIR /app

# 1. Copiamos o package.json do common
COPY packages/common/package*.json ./packages/common/

# Entramos na pasta e instalamos as dependências (incluindo @prisma/client)
WORKDIR /app/packages/common
RUN npm install
# ---------------------

# Voltamos para a raiz e copiamos o resto do código do common
WORKDIR /app
COPY packages/common/ ./packages/common/

# 2. Copiamos os arquivos do serviço (Google Calendar Service)
COPY services/google-calendar-service/package*.json ./services/google-calendar-service/
COPY services/google-calendar-service/tsconfig.json ./services/google-calendar-service/

# 3. Instalamos as dependências do serviço
WORKDIR /app/services/google-calendar-service
RUN npm install

# 4. Linkamos o Prisma
RUN ln -s /app/packages/common/node_modules/.bin/prisma /usr/local/bin/prisma

# 5. Script de infra
COPY services/google-calendar-service/wait-for-it.sh ./wait-for-it.sh
RUN chmod +x ./wait-for-it.sh


EXPOSE 3004
CMD ["npm", "run", "dev"]
