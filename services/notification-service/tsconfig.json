{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "noEmitOnError": true,

    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*", 
],
  "exclude": ["node_modules", "dist"]
}