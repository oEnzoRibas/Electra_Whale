# Dockerfile.dev para API Gateway (Node.js)

FROM node:20-alpine

WORKDIR /app

RUN apk add --no-cache bash inotify-tools

# Copiar package.json e instalar todas as dependências
COPY package.json package-lock.json tsconfig.json ./
RUN npm install

# Copiar todo o código
COPY . .

# Garantir que wait-for-it.sh tenha permissão
COPY wait-for-it.sh /app/wait-for-it.sh
RUN chmod +x /app/wait-for-it.sh

# Expor a porta
EXPOSE 8080

# Rodar hot reload com ts-node-dev
CMD ["sh", "-c", "./wait-for-it.sh postgres:5432 -- npm run dev"]
