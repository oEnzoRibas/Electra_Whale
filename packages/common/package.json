{
  "name": "@ew/common",
  "version": "1.0.0",
  "main": "./src/index",
  "types": "./src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "db:generate": "npx prisma generate --config=prisma.config.ts",
    "db:migrate": "npx prisma migrate deploy --config=prisma.config.ts",
    "db:dev": "npx prisma migrate dev --config=prisma.config.ts",
    "db:studio": "npx prisma studio --schema=prisma/schema.prisma",
    "db:format": "npx prisma format --schema=prisma/schema.prisma"
  },
  "prisma": {
    "schema": "./prisma"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "express": "^5.2.1"
  }
}
